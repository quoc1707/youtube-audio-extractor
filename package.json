{
    "name": "youtube-audio-extractor",
    "version": "1.0.0",
    "private": true,
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder build"
    },
    "dependencies": {
        "ffmpeg-static": "5.0.0",
        "fluent-ffmpeg": "^2.1.2",
        "ytdl-core": "^4.11.0",
        "ytpl": "^2.3.0"
    },
    "devDependencies": {
        "electron": "^18.2.0",
        "electron-builder": "^23.0.3"
    },
    "build": {
        "asar": true,
        "extends": null,
        "compression": "maximum",
        "productName": "Youtube Audio Extractor",
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "shortcutName": "${productName}",
            "artifactName": "${name}-${version}.${ext}",
            "oneClick": true,
            "perMachine": true,
            "allowElevation": true,
            "runAfterFinish": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "deleteAppDataOnUninstall": true
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "type": "distribution",
            "category": "public.app-category.graphics-design"
        },
        "dmg": {
            "title": "${productName}",
            "artifactName": "${name}-${version}.${ext}",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    }
}
